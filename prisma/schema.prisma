generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VerificationRecord {
  id         String   @id @default(cuid())
  sha256     String   @unique
  phash      String?  // Perceptual hash for visual similarity matching
  verdict    String
  confidence Float
  method     String?
  result     Json
  sourceUrl  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([createdAt])
  @@index([phash])
}
